<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <style>
      body {
        background-color: #f8f9fa;
      }
      /* Styles to make the pre tag look like a modern article body */
      .article-body {
        white-space: pre-wrap;
        font-family: var(--bs-body-font-family);
        font-size: 1.1rem;
        line-height: 1.8;
        color: #333;
        background: transparent;
        border: none;
        padding: 0;
        overflow-x: hidden;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/navbar') %>

    <div class="container mt-5 mb-5">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <!-- Header -->
          <h1 class="fw-bold display-5 mb-4 text-center"><%= blog.title %></h1>

          <!-- Author Info Top -->
          <div class="d-flex align-items-center justify-content-center mb-4">
            <img
              src="<%= blog.author.profileImageUrl %>"
              class="rounded-circle border"
              style="width: 40px; height: 40px; object-fit: cover"
              alt="Author"
            />
            <div class="ms-3 text-start">
              <span class="d-block fw-bold text-dark"
                ><%= blog.author.fullName %></span
              >
            </div>
          </div>

          <!-- Cover Image -->
          <div
            class="mb-5 shadow-sm rounded-4 overflow-hidden position-relative"
            style="
              aspect-ratio: 16/9;
              display: flex;
              justify-content: center;
              align-items: center;
            "
          >
            <img
              src="<%= blog.coverImageUrl %>"
              class="h-100"
              style="object-fit: contain; aspect-ratio: 16/9"
            />
          </div>

          <!-- Content -->
          <article class="bg-white p-4 p-md-5 rounded-4 shadow-sm">
            <pre class="article-body"><%= blog.body %></pre>
          </article>

          <!-- Comment Section -->
          <div class="mt-5">
            <h4 class="fw-bold mb-4">Comments (<%= comments.length %>)</h4>

            <% if(locals.user) { %>
            <div class="card border-0 shadow-sm p-4 mb-4 rounded-4">
              <form action="/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                  <label for="commentOnPost" class="form-label fw-bold"
                    >Leave a comment</label
                  >
                  <textarea
                    class="form-control bg-light border-0"
                    id="commentOnPost"
                    required
                    name="commentOnPost"
                    rows="3"
                    placeholder="Share your thoughts..."
                  ></textarea>
                </div>
                <div class="text-end">
                  <button type="submit" class="btn btn-dark rounded-pill px-4">
                    Post Comment
                  </button>
                </div>
              </form>
            </div>
            <% } else { %>
            <div class="alert alert-light border shadow-sm text-center mb-4">
              Please <a href="/login" class="text-decoration-none">login</a> to
              comment.
            </div>
            <% } %>

            <!-- Comments List -->
            <div class="vstack gap-3">
              <% comments.forEach(comment=>{ %>
              <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-3">
                  <div class="d-flex">
                    <img
                      src="<%= comment.author.profileImageUrl %>"
                      class="rounded-circle"
                      style="width: 45px; height: 45px; object-fit: cover"
                    />
                    <div class="ms-3 w-100">
                      <h6 class="fw-bold mb-1">
                        <%= comment.author.fullName %>
                      </h6>
                      <p class="mb-0 text-secondary"><%= comment.body %></p>
                    </div>
                  </div>
                </div>
              </div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
