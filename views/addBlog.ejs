<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <style>
      body {
        background-color: #f8f9fa;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/navbar') %>

    <div class="container mt-5 mb-5">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="d-flex align-items-center justify-content-between mb-4">
            <h2 class="fw-bold mb-0">Write New Article</h2>
          </div>

          <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body p-4 p-md-5">
              <form
                action="/blog/add-new"
                enctype="multipart/form-data"
                method="post"
              >
                <div class="mb-4">
                  <label
                    for="title"
                    class="form-label fw-bold text-secondary text-uppercase small"
                    style="letter-spacing: 1px"
                    >Title</label
                  >
                  <input
                    type="text"
                    class="form-control form-control-lg border-0 bg-light"
                    required
                    id="title"
                    name="title"
                    placeholder="Enter an engaging title..."
                  />
                </div>

                <div class="mb-4">
                  <label
                    for="coverImage"
                    class="form-label fw-bold text-secondary text-uppercase small"
                    style="letter-spacing: 1px"
                    >Cover Image</label
                  >
                  <input
                    type="file"
                    class="form-control"
                    required
                    id="coverImage"
                    name="coverImage"
                  />
                  <div class="form-text">
                    Choose a high-quality image for the banner.
                  </div>
                </div>

                <div class="mb-4">
                  <label
                    for="body"
                    class="form-label fw-bold text-secondary text-uppercase small"
                    style="letter-spacing: 1px"
                    >Content</label
                  >
                  <textarea
                    required
                    class="form-control border-0 bg-light"
                    id="body"
                    name="body"
                    rows="12"
                    placeholder="Start writing your story..."
                  ></textarea>
                </div>

                <div class="d-grid">
                  <button
                    class="btn btn-primary rounded-pill py-3 fw-bold"
                    type="submit"
                  >
                    Publish Article
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
